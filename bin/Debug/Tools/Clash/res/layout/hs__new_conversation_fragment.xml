<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="@dimen/hs__content_wrapper_padding" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
